<% if (is_post()){ %>
    <div class="scroll" id="post-nav-button">
        <% if (post.prev){ %>
            <a href="<%- url_for(post.prev.path) %>" title="<%= __('post.nav.prev') %>: <%= post.prev.title %>">
                <i class="fa fa-angle-left"></i>
            </a>
        <% } else { %>
            <a href="<%- config.root %>" title="<%= __('post.nav.home') %>"><i class="fa fa-home"></i></a>
        <% } %>
        <a title="<%= __('post.nav.article') %>"><i class="fa fa-bars"></i><i class="fa fa-times"></i></a>
        <% if (post.next){%>
            <a href="<%- url_for(post.next.path) %>" title="<%= __('post.nav.next') %>: <%= post.next.title %>">
                <i class="fa fa-angle-right"></i>
            </a>
        <% } else { %>
            <a href="<%- config.root %>" title="<%= __('post.nav.home') %>"><i class="fa fa-home"></i></a>
        <% } %>
    </div>
    <%- list_posts({amount: 999}) %>
    <script src="js/jquery-1.9.1.min.js"></script>
    <script>
        $(".post-list").addClass("toc-article");
        $(".post-list-item a").attr("target","_blank");
        $("#post-nav-button > a:nth-child(2)").click(function() {
            $(".fa-bars, .fa-times").toggle();
            $(".post-list").toggle(300);
            if ($(".toc").length > 0) {
                $("#toc, #tocButton").toggle(200, function() {
                    if ($(".switch-area").is(":visible")) {
                        $("#tocButton").attr("value", valueHide);
                        }
                    })
            }
            else {
            }
        })
    </script>
<% } %>